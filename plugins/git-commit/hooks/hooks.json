{
  "description": "Intercept direct git commit attempts and redirect to the /commit plugin workflow",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__1mcp__git_1mcp_git_commit",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "${CLAUDE_PLUGIN_ROOT}/hooks/intercept-mcp-commit.md"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/intercept-git-commit.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
