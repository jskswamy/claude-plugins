{
  "description": "Safety net for detecting refactoring patterns in Edit tool calls",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-refactoring-edit.sh",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
